set -g default-shell "{{ .shell }}"
set -g history-limit 100000 # scroll history
set -g mode-keys vi # vim mode
set -g mouse on # mouse friendly
set -sg escape-time 0 # Avoid ESC delay
set -g default-terminal "xterm-256color"
set -ga terminal-overrides ",alacritty:Tc"
set -g set-titles on
set -g set-titles-string "#T"

# Move between panes with vi keys
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

# Sane scrolling
bind -n WheelUpPane if-shell -F -t = "#{mouse_any_flag}" "send-keys -M" "if -Ft= '#{pane_in_mode}' 'send-keys -M' 'copy-mode -e; send-keys -M'"

##### Theme #####

# Avoid date/time taking up space
set -g status-right ''
set -g status-right-length 0

{{- if eq .theme "light" }}

# default statusbar colors
set-option -g status-style "fg=#586069,bg=default"

# default window title colors
set-window-option -g window-status-style "fg=#586069,bg=default"

# active window title colors
set-window-option -g window-status-current-style "fg=#22863a,bg=default,bold"

# pane border
set-option -g pane-border-style "fg=#cdd9e5"
set-option -g pane-active-border-style "fg=#cdd9e5"

# message text
set-option -g message-style "fg=#539bf5,bg=default"

# pane number display
set-option -g display-panes-active-colour "#22863a"
set-option -g display-panes-colour "#586069"

# clock
set-window-option -g clock-mode-colour "#22863a"

# copy mode highligh
set-window-option -g mode-style "fg=default,bg=#accbff"

# bell
set-window-option -g window-status-bell-style "fg=#fbfbfb,bg=#cb2431"

{{- else }}

# default statusbar colors
set-option -g status-style "fg=#adbac7,bg=default"

# default window title colors
set-window-option -g window-status-style "fg=#636e7b,bg=default"

# active window title colors
set-window-option -g window-status-current-style "fg=#00ff00,bg=default,bold"

# pane border
set-option -g pane-border-style "fg=#545d68"
set-option -g pane-active-border-style "fg=#545d68"

# message text
set-option -g message-style "fg=#539bf5,bg=default"

# pane number display
set-option -g display-panes-active-colour "#00ff00"
set-option -g display-panes-colour "#adbac7"

# clock
set-window-option -g clock-mode-colour "#8ddb8c"

# copy mode highligh
set-window-option -g mode-style "fg=default,bg=#264f78"

# bell
set-window-option -g window-status-bell-style "fg=#fbfbfb,bg=#fb4934"

{{- end }}
# Initialize TMUX plugin manager (keep this line at the very bottom of tmux.conf)
run '~/.tmux/plugins/tpm/tpm'
