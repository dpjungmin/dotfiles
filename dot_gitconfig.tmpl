[user]
    name = {{ .gitconfig.name }}
    email = {{ .gitconfig.email }}

[alias]
    c = commit
    s = status
    st = status
    l = log --oneline
    lg = log --oneline --graph
    last = log -1 HEAD
    f = push --force-with-lease
    r = rebase

[init]
    defaultBranch = main

[fetch]
    prune = true

[pull]
    ff = only

[core]
    editor = {{ .editor }}

[color]
    ui = auto
