window:
  dimensions:
    columns: 100
    lines: 85
  position:
    x: 0
    y: 0
  padding:
    x: 0
    y: 0
  dynamic_padding: true
  decorations: none
  opacity: 1.0
  startup_mode: Windowed
  dynamic_title: true

scrolling:
  history: 100000
  multiplier: 3

font:
  normal:
    family: {{ .alacritty.font.family }}
  size: {{ .alacritty.font.size }}
  offset:
    x: 2
    y: 2
  {{ if eq .chezmoi.os "darwin" -}}
  use_thin_strokes: true
  {{ end -}}
  builtin_box_drawing: true

draw_bold_text_with_bright_colors: true

colors:
  primary:
    background: '#1d1f21'
    foreground: '#ccd6f6'

  cursor:
    text: '#ff0000'
    cursor: '#00ff00'

  vi_mode_cursor:
    text: '#ff0000'
    cursor: '#00ff00'

  search:
    matches:
      foreground: '#ffffff'
      background: '#f4468f'
    focused_match:
      foreground: CellBackground
      background: '#00ff00'
    bar:
      foreground: '#c5c8c6'
      background: '#1d1f21'

  normal:
    black:   '#1d1f21'
    red:     '#cc6666'
    green:   '#b5bd68'
    yellow:  '#f0c674'
    blue:    '#81a2be'
    magenta: '#b294bb'
    cyan:    '#8abeb7'
    white:   '#c5c8c6'

  bright:
    black:   '#666666'
    red:     '#d54e53'
    green:   '#b9ca4a'
    yellow:  '#e7c547'
    blue:    '#7aa6da'
    magenta: '#c397d8'
    cyan:    '#70c0b1'
    white:   '#eaeaea'

selection:
  semantic_escape_chars: ",â”‚`|:\"' ()[]{}<>\t"
  save_to_clipboard: true

cursor:
  style:
    shape: Block
    blinking: Off
  unfocused_hollow: true
  thickness: 0.4

live_config_reload: true

shell:
  program: {{ .shell }}
  args:
    - --login

alt_send_esc: true
ipc_socket: true

key_bindings:
  - { key: J,        mods: Alt,     chars: "\x1bj"                       }
  - { key: K,        mods: Alt,     chars: "\x1bk"                       }
  - { key: H,        mods: Alt,     chars: "\x1bh"                       }
  - { key: L,        mods: Alt,     chars: "\x1bl"                       }
