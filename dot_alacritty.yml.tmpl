env:
  EDITOR: {{ .editor }}

window:
  dimensions:
    columns: 100
    lines: 85
  position:
    x: 0
    y: 0
  padding:
    x: 0
    y: 2
  dynamic_padding: true
  decorations: none
  opacity: 1
  startup_mode: Windowed
  title: Alacritty
  dynamic_title: true

scrolling:
  history: 100000
  multiplier: 3

font:
  normal:
    family: {{ .alacritty.font.family }}
    style: Regular
  bold:
    family: {{ .alacritty.font.family }}
    style: Bold
  italic:
    family: {{ .alacritty.font.family }}
    style: Italic
  bold_italic:
    family: {{ .alacritty.font.family }}
    style: Bold Italic
  size: {{ .alacritty.font.size }}
  offset:
    x: 1
    y: 1
  use_thin_strokes: true
  builtin_box_drawing: true

