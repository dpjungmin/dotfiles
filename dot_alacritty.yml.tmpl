window:
  dimensions:
    columns: 100
    lines: 85
  position:
    x: 0
    y: 0
  padding:
    x: 0
    y: 0
  dynamic_padding: true
  decorations: none
  opacity: 0.98
  startup_mode: Windowed
  dynamic_title: true

scrolling:
  history: 100000
  multiplier: 3

font:
  normal:
    family: {{ .alacritty.font.family }}
  size: {{ .alacritty.font.size }}
  offset:
    x: 2
    y: 2
  {{ if eq .chezmoi.os "darwin" -}}
  use_thin_strokes: true
  {{ end -}}
  builtin_box_drawing: true

draw_bold_text_with_bright_colors: true

colors:
  primary:
    background: '#22272e'
    foreground: '#adbac7'

  cursor:
    text: CellBackground
    cursor: '#00ff00'

  vi_mode_cursor:
    text: CellBackground
    cursor: '#00ff00'

  search:
    matches:
      foreground: '#ffffff'
      background: '#f4468f'
    focused_match:
      foreground: CellBackground
      background: '#00ff00'
    bar:
      foreground: '#cdd9e5'
      background: '#316dca'

  normal:
    black:   '#545d68'
    red:     '#f47067'
    green:   '#57ab5a'
    yellow:  '#c69026'
    blue:    '#539bf5'
    magenta: '#b083f0'
    cyan:    '#39c5cf'
    white:   '#909dab'

  bright:
    black:   '#636e7b'
    red:     '#ff938a'
    green:   '#6bc46d'
    yellow:  '#daaa3f'
    blue:    '#6cb6ff'
    magenta: '#dcbdfb'
    cyan:    '#56d4dd'
    white:   '#cdd9e5'

selection:
  semantic_escape_chars: ",â”‚`|:\"' ()[]{}<>\t"
  save_to_clipboard: true

cursor:
  style:
    shape: Block
    blinking: Off
  unfocused_hollow: true
  thickness: 0.4

live_config_reload: true

shell:
  program: {{ .shell }}
  args:
    - --login

alt_send_esc: true
ipc_socket: true

key_bindings:
  - { key: J,        mods: Alt,     chars: "\x1bj"                       }
  - { key: K,        mods: Alt,     chars: "\x1bk"                       }
  - { key: H,        mods: Alt,     chars: "\x1bh"                       }
  - { key: L,        mods: Alt,     chars: "\x1bl"                       }
